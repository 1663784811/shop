.adminWindon
  width: 100%;
  height: 100%;
  //========= 头部

  .adminTop
    height: 50px;
    background: #252a2f;

    .adminTopRight
      float: right;

  //========= 内容

  .adminConter
    width: 100%;
    height: calc(100% - 50px);
    overflow: hidden;
    position: relative;
    flex-direction: row;
    //========= 左边

    .adminConterLeft
      width: 200px;
      height: 100%;
      background: #252a2f;
      position absolute
      top: 0
      left: 0
      transition all .5s;
      overflow: auto;

      .adminLeftBtn
        background #141415
        height 20px
        cursor: pointer
        text-align center
        margin 1px 0;
        color #eee

    //=========右边

    .adminConterRight
      margin-left: 200px
      height: 100%;
      transition all .5s
      border-left: 1px solid #eee

      .ivu-tabs
        height: 100%;

      .tabIframe
        border: 0;
        height: 100%;
        width: 100%;
